                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="20dp"
                    android:text="Atribuido por"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />

